APP_NAME=BluShop
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (Docker Compose)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=blushop
DB_USERNAME=blushop
DB_PASSWORD=blushop

# Cache / Session
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue & Mail (defaults)
QUEUE_CONNECTION=sync
MAIL_MAILER=log
MAIL_FROM_ADDRESS=noreply@blushop.local
MAIL_FROM_NAME="BluShop"

# Filesystems
FILESYSTEM_DISK=public

# Vite dev server
VITE_HOST=0.0.0.0
VITE_PORT=5173
